<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVacancyTitle"
                style="@style/TextViewBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vacancy Title" />

            <TextView
                android:id="@+id/txtCity"
                style="@style/TextViewBody.Inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Damascus Syria" />

            <TextView
                android:id="@+id/txtName"
                style="@style/TextViewBody.Active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sami Samara" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/image_details"
                    android:layout_height="@dimen/image_details"
                    app:srcCompat="@drawable/ic_clock" />
                <TextView
                    android:id="@+id/txtDays"
                    style="@style/TextViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_lr"
                    android:layout_marginRight="@dimen/margin_lr"
                    android:layout_weight="1"
                    android:text="11 days" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgRead"
                    android:layout_width="@dimen/image_details"
                    android:layout_height="@dimen/image_details"
                    app:srcCompat="@drawable/ic_unread" />

                <TextView
                    android:id="@+id/txtRead"
                    style="@style/TextViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_lr"
                    android:layout_marginRight="@dimen/margin_lr"
                    android:layout_weight="1"
                    android:text="Unread" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>