<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    tools:context="com.itland.employer.fragments.VacancyDetailsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_margin"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/actionLogo"
                        android:layout_width="0dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="25"
                        android:src="@mipmap/profile"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_padding">

                        <TextView
                            android:id="@+id/txtTitle"
                            style="@style/TextViewBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Front-end Developer"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtCompanyName"
                            style="@style/TextViewDetails.Inactive"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="IT-Land" />

                        <TextView
                            android:id="@+id/txtCompanyIndustry"
                            style="@style/TextViewDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Technology Industry" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="35"
                        android:orientation="vertical"
                        android:padding="@dimen/layout_padding">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="@dimen/image_details"
                                android:layout_height="@dimen/image_details"
                                app:srcCompat="@drawable/ic_application" />

                            <TextView
                                android:id="@+id/txtActiveStatus"
                                style="@style/TextViewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_lr"
                                android:layout_marginRight="@dimen/margin_lr"
                                android:text="In-active" />
                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="@dimen/image_details"
                                android:layout_height="@dimen/image_details"
                                app:srcCompat="@drawable/ic_clock" />

                            <TextView
                                android:id="@+id/txtPostedSince"
                                style="@style/TextViewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_lr"
                                android:layout_marginRight="@dimen/margin_lr"
                                android:text="14 days ago" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnrExpired"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dividerHeight"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="@dimen/image_details"
                                android:layout_height="@dimen/image_details"
                                android:tint="@color/text_error"
                                app:srcCompat="@drawable/ic_clock" />

                            <TextView
                                android:id="@+id/txtExpiredSince"
                                style="@style/TextViewDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_lr"
                                android:layout_marginRight="@dimen/margin_lr"
                                android:text="expiring in 2 days"
                                android:textColor="@color/text_error" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dividerHeight"
                    android:background="@android:color/black" />

                <LinearLayout
                    android:id="@+id/lnrViews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_lr"
                    android:layout_marginRight="@dimen/margin_lr"
                    android:layout_marginTop="@dimen/dividerHeight"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="@dimen/image_details"
                        android:layout_height="@dimen/image_details"
                        app:srcCompat="@drawable/ic_view" />

                    <TextView
                        android:id="@+id/txtViews"
                        style="@style/TextViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_lr"
                        android:layout_marginRight="@dimen/margin_lr"
                        android:text="335 views" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="@dimen/image_details"
                        android:layout_height="@dimen/image_details"
                        android:tint="@color/text_warning"
                        app:srcCompat="@drawable/ic_job" />

                    <TextView
                        android:id="@+id/txtApplications"
                        style="@style/TextViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_lr"
                        android:layout_marginRight="@dimen/margin_lr"
                        android:text="566" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextViewBody.Inactive"
            android:layout_marginTop="@dimen/dividerHeight"
            android:text="@string/main_information" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="@dimen/image_body"
                        android:layout_height="@dimen/image_body"
                        android:adjustViewBounds="false"
                        app:srcCompat="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/txtLocation"
                        style="@style/TextViewBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_lr"
                        android:layout_marginRight="@dimen/margin_lr"
                        android:layout_weight="1"
                        android:text="Damascus" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dividerHeight"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/image_body"
                        android:layout_height="@dimen/image_body"
                        android:adjustViewBounds="false"
                        app:srcCompat="@drawable/ic_job" />

                    <TextView
                        android:id="@+id/txtRequiredExperience"
                        style="@style/TextViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="@dimen/margin_lr"
                        android:layout_marginRight="@dimen/margin_lr"
                        android:layout_weight="1"
                        android:text="5 years expertise" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/image_body"
                        android:layout_height="@dimen/image_body"
                        android:adjustViewBounds="false"
                        app:srcCompat="@drawable/ic_application" />

                    <TextView
                        android:id="@+id/txtSkills"
                        style="@style/TextViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_lr"
                        android:layout_marginRight="@dimen/margin_lr"
                        android:layout_weight="1"
                        android:text="html, css, sketch, jQuery, javascript, React, Redux, MVC Views" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/textView26"
            style="@style/TextViewBody.Inactive"
            android:layout_marginTop="@dimen/dividerHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more_specifications" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/layout_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCompanyIndustry2"
                        style="@style/TextViewBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Front-end Designer / Developer" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtType"
                        style="@style/TextViewDetails.Inactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Part time" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    style="@style/TextViewBody.Active"
                    android:text="@string/description"/>

                <TextView
                    android:id="@+id/txtJobDescription"
                    style="@style/TextViewDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>



</ScrollView>
