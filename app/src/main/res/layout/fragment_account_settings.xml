
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle3"
                android:paddingTop="55dp">

                <TextView
                    android:id="@+id/txtName"
                    style="@style/TextViewTitle.Active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center" />
            </LinearLayout>
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:padding="17dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_edit"
                android:tint="@color/text_active"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@mipmap/profile" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dividerHeight"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_lr"
                    android:paddingRight="@dimen/margin_lr">

                    <LinearLayout
                        android:id="@+id/lnrChangeEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtEmail"
                            style="@style/TextViewBody"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:layout_marginTop="@dimen/dividerHeight"
                            android:gravity="center_vertical"
                            android:text="example@company.com" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imgEditEmail"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/ic_edit" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:id="@+id/lnrChangeGsm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtUsername"
                            style="@style/TextViewBody"
                            android:layout_width="wrap_content"
                            android:layout_height="75dp"
                            android:layout_marginTop="@dimen/dividerHeight"
                            android:gravity="center_vertical"
                            android:text="Username" />

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imgEditGsm"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            app:srcCompat="@drawable/ic_edit" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtPhone"
                            style="@style/TextViewBody"
                            android:layout_width="match_parent"
                            android:layout_height="75dp"
                            android:layout_marginTop="@dimen/dividerHeight"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />
                    <TextView
                        android:id="@+id/txtChange"
                        style="@style/TextViewBody"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_marginTop="@dimen/dividerHeight"
                        android:layout_weight="1"
                        android:text="@string/change_password"
                        android:gravity="center_vertical" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>